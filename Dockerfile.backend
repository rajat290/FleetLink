# Use official Node.js LTS image
FROM node:18

# Create app directory
WORKDIR /usr/src/app

# Copy package.json and package-lock.json
COPY backend/package*.json ./

# Install app dependencies
RUN npm install

# Copy backend source code
COPY backend/ .

# Expose backend port
EXPOSE 5000

# Start the backend server
CMD ["node", "server.js"]
